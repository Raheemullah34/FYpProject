<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg"
    android:gravity="center"
    tools:context=".Register_Child_Disk">



    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <EditText
            android:layout_marginBottom="5dp"
            android:id="@+id/ed_Rchild_name"
            android:hint="Name"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>

        <EditText
            android:textSize="15dp"
            android:id="@+id/ed_Rchild_F_name"
            android:layout_marginBottom="5dp"
            android:hint="Father Name"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>
        <EditText
            android:inputType="number"
            android:textSize="15dp"
            android:id="@+id/ed_Rchild_F_name_cnic"
            android:layout_marginBottom="5dp"
            android:hint="Father Cnic"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>


        <EditText
            android:inputType="number"
            android:textSize="15dp"
            android:id="@+id/ed_Rchild_F_number"
            android:layout_marginBottom="5dp"
            android:hint="Family Number"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>

        <EditText
            android:textSize="15dp"
            android:id="@+id/ed_Rchild_Location"
            android:layout_marginBottom="5dp"
            android:hint="Location"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>
        <EditText
            android:textSize="15dp"
            android:id="@+id/ed_Rchild_date"
            android:layout_marginBottom="5dp"
            android:hint="Reg date"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>


        <Button
            android:id="@+id/btn_Rchild_Register"
            android:text="Register"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>



    </LinearLayout>



</LinearLayout>