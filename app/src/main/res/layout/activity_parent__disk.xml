<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Parent_Disk">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poliicon"
        android:layout_marginLeft="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/polio_icon"/>


    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:id="@+id/lay_button"
        android:gravity="center"
        android:layout_below="@id/poliicon"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:textSize="25dp"
            android:text="Register Child"
            android:id="@+id/btn_P_R_Child"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:textSize="25dp"
            android:text="Complaint"
            android:id="@+id/btn_P_Complaint"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>



</RelativeLayout>