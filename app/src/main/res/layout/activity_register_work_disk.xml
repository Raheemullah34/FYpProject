<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context=".Register_Work_Disk">



    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_marginBottom="5dp"
            android:id="@+id/edTname"
            android:hint="Name"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:textSize="15dp"
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="65dp"/>

        <EditText
            android:layout_marginBottom="5dp"
            android:id="@+id/edTFathername"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:hint="Father Name"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>



        <EditText
            android:inputType="number"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:id="@+id/edTcnic"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:hint="C.N.I.C"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>


        <EditText
            android:inputType="number"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edTcontact"
            android:hint="Contact No"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>

        <Spinner
            android:layout_marginBottom="5dp"
            android:id="@+id/spnTid"
            android:entries="@array/TEAM"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>

        <Spinner
            android:layout_marginBottom="5dp"
            android:id="@+id/type"
            android:entries="@array/TEAM_Pos"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>



        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btn_R_W_D_Register"
            android:text="Register"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>


    </LinearLayout>




</LinearLayout>